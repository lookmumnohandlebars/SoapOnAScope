    </ItemGroup>

    <ItemGroup>
        <Using Include="Xunit"/>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\lib\SoapOnAScope\SoapOnAScope.csproj" />
    </ItemGroup>

