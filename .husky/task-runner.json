{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "Commit | Lint",
      "command": "bunx",
      "args": ["--no", "commitlint", "--edit", "$1"],
      "group": "commit-msg"
    },
    {
      "name": "Task | Build",
      "command": "task",
      "args": ["build"],
      "group": "pre-commit"
    },
    {
      "name": "Task | Refactor C#",
      "command": "task",
      "args": ["fmt:refactor", "FILES=${staged}"],
      "include": ["**/*.cs"],
      "group": "pre-commit"
    },
    {
      "name": "Task | Format w/ Prettier",
      "command": "task",
      "args": ["fmt:prettier", "--", "${staged}"],
      "include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.yml",
        "**/*.yaml",
        "**/*.json",
        ".*rc"
      ],
      "group": "pre-commit"
    },
    {
      "name": "Task | Format C#",
      "command": "task",
      "args": ["fmt:csharp", "--", "${staged}"],
      "include": ["**/*.cs"],
      "group": "pre-commit"
    },
    {
      "name": "Task | Tests",
      "command": "task",
      "args": ["test"],
      "group": "pre-commit"
    },
    {
      "name": "Task | Verify Pack",
      "command": "dotnet",
      "args": ["pack", "src/SoapOnAScope/SoapOnAScope.csproj"],
      "group": "pre-commit"
    },
    {
      "name": "Task | Clean",
      "command": "task",
      "args": ["clean"],
      "group": "post-checkout"
    }
  ]
}
